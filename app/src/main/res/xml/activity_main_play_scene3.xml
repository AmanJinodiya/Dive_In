<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="60dp"
            android:layout_width="69dp"
            android:id="@+id/song_pic"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            motion:layout_constraintHorizontal_bias="0.046" />
        <Constraint
            android:layout_height="25dp"
            android:layout_width="176dp"
            android:id="@+id/textView"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            motion:layout_constraintHorizontal_bias="0.429" />
        <Constraint
            android:layout_height="13dp"
            android:layout_width="333dp"
            android:id="@+id/seekBar"
            motion:layout_editor_absoluteX="37dp"
            motion:layout_editor_absoluteY="521dp"
            android:alpha="0" />
        <Constraint
            android:layout_height="57dp"
            android:layout_width="53dp"
            android:id="@+id/play_button"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="312dp"
            android:layout_marginStart="312dp"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:layout_marginEnd="108dp"
            android:layout_height="50dp"
            android:layout_marginBottom="112dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.8"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="50dp"
            motion:layout_constraintStart_toEndOf="@+id/play_button"
            android:layout_marginStart="28dp"
            android:id="@+id/skip_next" />
        <Constraint
            android:layout_marginEnd="40dp"
            android:layout_height="46dp"
            android:layout_marginBottom="114dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.368"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="46dp"
            motion:layout_constraintStart_toEndOf="@+id/skip_next"
            android:layout_marginStart="22dp"
            android:id="@+id/repeat_button" />
        <Constraint
            android:layout_marginEnd="28dp"
            android:layout_height="50dp"
            android:layout_marginBottom="112dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.2"
            android:layout_width="50dp"
            motion:layout_constraintEnd_toStartOf="@+id/play_button"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="108dp"
            android:id="@+id/skip_prev"
            android:alpha="0" />
        <Constraint
            android:layout_marginEnd="22dp"
            android:layout_height="46dp"
            android:layout_marginBottom="114dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="1.0"
            android:layout_width="46dp"
            motion:layout_constraintEnd_toStartOf="@+id/skip_prev"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:id="@+id/shuffle_button"
            android:alpha="0" />
        <Constraint
            android:id="@+id/shuffle_action"
            android:layout_width="14dp"
            android:layout_height="13dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp"
            android:layout_marginStart="40dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
        <Constraint
            android:layout_height="677dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="140dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintLeft_toRightOf="parent"
            android:layout_width="413dp"
            android:id="@+id/rl" />
    </ConstraintSet>
</MotionScene>