<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="84dp"
            android:layout_width="80dp"
            android:id="@+id/song_pic"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />
        <Constraint
            android:layout_height="43dp"
            android:layout_width="174dp"
            android:id="@+id/textView"

            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="116dp"
            android:layout_marginRight="116dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" >


        </Constraint>
        <Constraint
            android:layout_height="13dp"
            android:layout_width="333dp"
            android:id="@+id/seekBar"
            motion:layout_editor_absoluteX="51dp"
            android:alpha="0"
            motion:layout_editor_absoluteY="436dp" />
        <Constraint
            android:layout_height="46dp"
            android:layout_width="46dp"
            android:id="@+id/shuffle_button"
            motion:layout_editor_absoluteY="571dp"
            motion:layout_editor_absoluteX="22dp"
            android:alpha="0" />
        <Constraint
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:id="@+id/skip_prev"
            motion:layout_editor_absoluteY="549dp"
            android:alpha="0" />
        <Constraint
            android:layout_height="63dp"
            android:layout_width="33dp"
            android:id="@+id/play_button"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:layout_marginTop="28dp"
            motion:layout_editor_absoluteX="310dp" />
        <Constraint
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:id="@+id/skip_next"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" />
        <Constraint
            android:layout_height="46dp"
            android:layout_width="46dp"
            android:id="@+id/repeat_button"
            motion:layout_editor_absoluteX="325dp"
            motion:layout_editor_absoluteY="571dp"
            android:alpha="0" />
        <Constraint
            android:layout_height="620dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/rl" />
        <Constraint
            android:id="@+id/shuffle_action"
            android:layout_width="14dp"
            android:layout_height="13dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="108dp"
            android:layout_marginStart="51dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
    </ConstraintSet>
</MotionScene>