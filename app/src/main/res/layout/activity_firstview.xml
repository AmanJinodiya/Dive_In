<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".firstview">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        android:background="@color/drawer"
        app:headerLayout="@layout/header"
        app:menu="@menu/new_menu"/>

    <!--    bottom_navigation-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/bg1"
            android:layout_width="410dp"
            android:layout_height="389dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="50dp"

            android:src="@drawable/main4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/all"
            android:layout_width="182dp"
            android:layout_height="128dp"
            android:layout_marginStart="114dp"
            android:layout_marginEnd="115dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/all"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="373dp"
            android:layout_height="57dp"
            android:background="@drawable/round_corners"
            android:elevation="5dp"
            app:itemIconSize="30dp"
            app:itemIconTint="@drawable/item_selector"
            app:itemRippleColor="@android:color/transparent"
            app:labelVisibilityMode="unlabeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/item_menu" />

        <HorizontalScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="192dp"
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/all"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="300dp"

                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="#262626">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#262626"
                        android:src="@drawable/source" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="260dp"
                        android:gravity="center"
                        android:text="P!@Y!i$Y"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="300dp"

                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="#262626">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/j"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#262626"
                        android:src="@drawable/pp10" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="260dp"
                        android:gravity="center"
                        android:text="Punjabi"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/travel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#262626"
                        android:src="@drawable/pp11" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="260dp"
                        android:gravity="center"
                        android:text="Travel"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/broken"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#262626"
                        android:src="@drawable/pp4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="260dp"
                        android:gravity="center"
                        android:text="Broken"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/english"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#262626"
                        android:src="@drawable/pp5" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="260dp"
                        android:gravity="center"
                        android:text="English"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/old"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#262626"
                        android:src="@drawable/pp7" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="260dp"
                        android:gravity="center"
                        android:text="Old"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/pop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#262626"
                        android:src="@drawable/pp2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="260dp"
                        android:gravity="center"
                        android:text="pop"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/workout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#262626"
                        android:src="@drawable/pp9" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="260dp"
                        android:gravity="center"
                        android:text="Work Out"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.drawerlayout.widget.DrawerLayout>